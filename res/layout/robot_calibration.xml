<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lblCalibrate_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calibrate_description" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblCalibrate_Circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="@string/calibrate_circle" />

        <Button
            android:id="@+id/btnCalibrate_Circle_Self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Self Calib" />

        <Button
            android:id="@+id/btnCalibrate_Circle_User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start User Calib" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblCalibrate_Distance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="@string/calibrate_distance" />

        <Button
            android:id="@+id/btnCalibrate_Distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calibrate_start" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </LinearLayout>
        
        <Button
            android:id="@+id/btnCalibrate_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save" />

        <Button
            android:id="@+id/btnCalibrate_Discard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discard" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>